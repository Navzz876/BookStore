@model List<Product>
<div class="container">
    <div class=" row pt-4 pb-4 justify-content-md-around">
        <div class="col-6">
            <h2> Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="CreateProduct" class="link-primary text-primary">
                <i class="bi bi-bag-plus h6 text-primary">

                </i>
                Add Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                 Title
            </th>
            <th>
                ISBN
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th></th>
            <th></th>

        </tr>                
    </table>
    <table id="myTable"></table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}
