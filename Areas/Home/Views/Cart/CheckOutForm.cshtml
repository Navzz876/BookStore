@model ShoppingCartViewModel
<main>
    <form method="post">
    <div class="py-5 text-center">
        <h2>Checkout form</h2>
    </div>
    <div class="row g-5">
        <div class="col-md-5 col-lg-4 order-md-last">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Your cart</span>
                    <span class="badge bg-primary rounded-pill"><i class="bi bi-cart-fill"></i> @Model.TotalCount  </span>
            </h4>
            <ul class="list-group mb-3">
                @foreach(var shoppingCart in Model.ShoppingCartList)
                {
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0">@shoppingCart.Product.Title</h6>
                    </div>
                            <span class="text-muted">$@shoppingCart.Product.Price</span>
                </li>
                } 
                </ul>
                <a asp-controller="Cart" asp-action="Index" class="btn btn-primary btn-lg"><i class="bi bi-backspace-fill"></i>  Back to Cart  </a>
        </div>
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Billing address</h4>
                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for=@Model.BillingDetails.Name class="form-label">Name</label>
                        <input asp-for=@Model.BillingDetails.Name type="text" class="form-control" value="@Model.BillingDetails.Name" required>
                    </div>


                    <div class="col-12">
                        <label asp-for="@Model.BillingDetails.EmailAddress" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                        <input asp-for="@Model.BillingDetails.EmailAddress" type="email" class="form-control"  placeholder="you@example.com" value="@Model.BillingDetails.EmailAddress">
                        
                    </div>

                    <div class="col-12">
                        <label asp-for="@Model.BillingDetails.Address" class="form-label">Address</label>
                        <input asp-for="@Model.BillingDetails.Address" type="text" class="form-control" id="address" placeholder="Plaza street" value="@Model.BillingDetails.Address">
                       
                    </div>

                    <div class="col-12">
                        <label asp-for="@Model.BillingDetails.Address2"  class="form-label">Address 2 <span class="text-muted">(Optional)</span></label>
                        <input asp-for="@Model.BillingDetails.Address2" type="text" class="form-control" placeholder="Apartment or suite" value="@Model.BillingDetails.Address2">
                    </div>

                    <div class="col-md-5">
                        <label asp-for="@Model.BillingDetails.City" class="form-label">City</label>
                        <input asp-for="@Model.BillingDetails.City" type="text" class="form-control" value="@Model.BillingDetails.City" />
                       
                    </div>

                    <div class="col-md-4">
                        <label asp-for="@Model.BillingDetails.State" class="form-label">State</label>
                        <input asp-for="@Model.BillingDetails.State" type="text" class="form-control" value="@Model.BillingDetails.State" />
                        
                    </div>

                    <div class="col-md-3">
                        <label asp-for="@Model.BillingDetails.ZipCode" class="form-label">Zip</label>
                        <input asp-for="@Model.BillingDetails.ZipCode" type="text" class="form-control" placeholder="" value="@Model.BillingDetails.ZipCode">
                       
                    </div>
                </div>

                <hr class="my-4">                

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="save-info">
                    <label class="form-check-label" for="save-info">Save this information for next time</label>
                </div>

                <hr class="my-4">

                <h4 class="mb-3">Payment</h4>

                <div class="my-3">
                    <div class="form-check">
                        <input id="credit" name="paymentMethod" type="radio" class="form-check-input" checked required>
                        <label class="form-check-label" for="credit">Credit card</label>
                    </div>
                    <div class="form-check">
                        <input id="debit" name="paymentMethod" type="radio" class="form-check-input" required>
                        <label class="form-check-label" for="debit">Debit card</label>
                    </div>
                </div>
                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to checkout</button>          
        </div>
    </div>
    </form>
</main>