@model UserInformation
<div class="sidenav">
    <div class="login-main-text text-center ">
        <h2 class="text-white">Book Store<br> Login Page</h2>
        <p class="text-white">Login or register from here to access.</p>
    </div>
</div>
<div class="main text-center offset-md-4">
    <div class="col-md-6 col-sm-12 text-center">
        <div class="login-form text-center">
            <form method="post">
                <div class="form-group">
                    <label>User Name</label>
                    <input asp-for=@Model.UserName type="text" class="form-control"/>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-12 ">
                    <label>Password</label>
                    <input asp-for=@Model.Password type="password" class="form-control"/>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class=" m-4">
                    <button type="submit" class="btn btn-primary" style="padding-right:100px;padding-left:100px;">Login</button>                    
                </div>                
            </form>
        </div>
    </div>
</div>