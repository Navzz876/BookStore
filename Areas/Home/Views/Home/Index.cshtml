@model IEnumerable<Product>
<div class="jumbotron" style="background-image: url( '.. /../../../Images/Product/BookpageHomeLatest.jpg'); width:100%;}">
    <br /> <br /> <br /> <br /> <br /> <br />
    <div class="container">
        <h1 class="display-4" style="color:Background; font-weight:400; font-size:70px;text-align:center">Welcome to the BookStore</h1>
        <p class="lead" style="color:Background;font-size:38px;text-align:center">Your one stop site for all your books and accessories</p>
    </div>
</div>
<div class="row">
    @foreach (var product in Model.ToList())
    {

        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <img src=@product.ImageUrl class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text"> $@product.Price</p>
                    <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-primary">Show Details</a>
                </div>
            </div>
        </div>

    }
</div>