@model List<Category>
<div class="container">
    <div class=" row pt-4 pb-4 justify-content-md-around">
        <div class="col-6">
            <h2> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="CreateCategory" class="link-primary text-primary">
                <i class="bi bi-bag-plus h6 text-primary">
                   
                </i>
                Add Category
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th></th>
        <th></th>
       
    </tr>
    @foreach (var category in Model)
    {
        <tr>

            <td>
                @category.Name
            </td>
            <td>
                @category.DisplayOrder
            </td>
            <td class="col-1">                
                    <a class=" link-primary text-primary" asp-controller="Category" asp-action="EditCategory" asp-route-id="@category.Id"><i class="bi bi-pencil-square text-primary"></i> Edit </a>
            </td>
            <td class="col-1">
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@category.Id"> <i class="bi bi-trash-fill text-danger"></i> </a>
            </td>
        </tr>
    }  
</table>
</div>
